<% layout("/layouts/boilerplate") %>
<!-- <h3>All Listings</h3> -->

<style>
  .filter-icons {
    display: flex;
    flex-wrap: wrap;
  }
  .filter {
    text-align: center;
    font-size: 0.8rem;
    margin: 2rem 0px;
    margin-right: 2rem;
    opacity: 0.7;
    cursor: pointer;
  }
  .filter:hover {
    opacity: 1;
  }
  a{
    text-decoration: none;
    color: black;
  }
</style>

<div class="filter-icons">
  <div class="filter">
    <a href="/listings/filter/General">
      <div><i class="fa-solid fa-house"></i></div>
      General
    </a>
  </div>
  <div class="filter">
    <a href="/listings/filter/Hill-Station">
      <div><i class="fa-solid fa-mountain"></i></div>
      Hill-Station
    </a>
  </div>
  <div class="filter">
    <a href="/listings/filter/Iconic-City">
      <div><i class="fa-solid fa-city"></i></div>
      Iconic-City
    </a>
  </div>
  <div class="filter">
    <a href="/listings/filter/Amazing-Pool">
      <div><i class="fa-solid fa-water-ladder"></i></div>
      Amazing-Pool
    </a>
  </div>
  <div class="filter">
    <a href="/listings/filter/Farmhouse">
      <div><i class="fa-solid fa-tractor"></i></div>
      Farmhouse
    </a>
  </div>
  <div class="filter">
    <a href="/listings/filter/Mansion">
      <div><i class="fa-solid fa-building"></i></div>
      Mansion
    </a>
  </div>
  <div class="filter">
    <a href="/listings/filter/OMG!">
      <div><i class="fa-solid fa-bolt"></i></div>
      OMG!
    </a>
  </div>
  <div class="filter">
    <a href="/listings/filter/Beach-Front">
      <div><i class="fa-solid fa-umbrella-beach"></i></div>
      Beach-Front
    </a>
  </div>
  <div class="filter">
    <a href="/listings/filter/Arctic">
      <div><i class="fa-solid fa-snowflake"></i></div>
      Arctic
    </a>
  </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <% for (let listing of allListings) { %>
  <a href="/listings/<%= listing._id%>" class="listing-link">
    <div class="listing-card col card">
      <img
        class="card-img-top"
        src="<%= listing.image.url %>"
        alt="listing image"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b>
          <br />
          &#8377; <%= listing.price.toLocaleString("en-IN") %> / Night
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>
